<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.itwillbs.mapper.BoardMapper">

	<!-- 테이블의 정보 설정 -->
	<resultMap type="com.itwillbs.domain.BoardVO" id="board">
		<result property="bno" column="bno" />
		<result property="title" column="title"/>
		<result property="writer" column="writer"/>
		<result property="content" column="content"/>
		<result property="viewcnt" column="viewcnt"/>
		<result property="regdate" column="regdate"/>
	</resultMap>


	
	<insert id="createBoard">
	   insert into tbl_board(title,writer,content) 
	   values(#{title},#{writer},#{content})	
	</insert>
	
	<!-- 글목록조회 -->
	<select id="selectBoardList" resultType="BoardVO">
	  select * from tbl_board order by regdate desc	
	</select>
	
	<!-- 글 조회 -->
	<select id="selectBoard" resultType="BoardVO" resultMap="board">
		select * from tbl_board 
		where bno = #{bno}		
	</select>
	
	<!-- 글 조회수 1증가 -->
	<update id="updateViewcnt">
		update tbl_board set viewcnt = viewcnt + 1 
		where bno = #{bno}	
	</update>

	<!-- 글 정보 수정 -->
	<update id="updateBoard" >
	   update tbl_board set title=#{title},writer=#{writer},content=#{content} 
	   where bno = #{bno}	 	
	</update>
	
	<!-- 글 정보 삭제 -->
	<delete id="deleteBoard">
		delete from tbl_board 
		where bno = #{bno}	
	</delete>
	
	<!-- 글 목록 조회(페이징처리) -->
	<select id="selectBoardListPage" resultType="BoardVO">
	  <![CDATA[
	  select * from tbl_board  
	  where bno > 0 
	  order by bno desc, regdate desc	
	  limit #{page},10
	  ]]>
	</select>
	
	<!-- 글 목록 조회(페이징처리-Cri) -->
	<select id="selectBoardListCri" resultType="BoardVO">
	  <![CDATA[
	  select * from tbl_board  
	  where bno > 0 
	  order by bno desc, regdate desc	
	  limit #{startPage},#{pageSize}
	  ]]>
	</select>
	
	
	<!-- 총 글의 개수 -->
	<select id="totalCount" resultType="int">
		select count(bno) from tbl_board
	</select>
	
	


</mapper> 
